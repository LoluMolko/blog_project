<%= render 'shared/errors', model: @comment %>

<%= form_for([@article, @comment]) do |f| %>
  <div class='form-group'>
    <%= f.label :commenter %>
    <%= f.text_field :commenter, class: 'form-control', placeholder: 'E-mail' %>
  </div>
  <div class='form-group'>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', placeholder: 'Text'  %>
  </div>
  <p>
    <%= f.submit class: "btn btn-default" %>
  </p>
<% end %>
